<% if @errors %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Error! </strong><%= @errors %>
  </div>
<% end %>

<% if @messages %>
  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Wheee! </strong><%= @messages %>
  </div>
<% end %>
